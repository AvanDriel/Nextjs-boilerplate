; Top-most EditorConfig file
root = true

; 4-column space indentation
[*]
indent_style = space
end_of_line = crlf
indent_size = 2
insert_final_newline = true
charset = utf-8

[*.{js,jsx,ts,tsx,scss,hbs}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 80
